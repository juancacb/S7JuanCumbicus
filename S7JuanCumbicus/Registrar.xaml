<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="S7JuanCumbicus.Registrar">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="30">
                <Label Text="Nombre: "></Label>
                <Entry Placeholder="Introduce tu nombre: " x:Name="Nombre"></Entry>
                <Label Text="Usuario: "></Label>
                <Entry Placeholder="Introduce tu usuario: " Keyboard="Email" x:Name="Usuario"></Entry>
                <Label Text="Contraseña: "></Label>
                <Entry Placeholder="Elige una contraseña" IsPassword="True" x:Name="Contrasenia"></Entry>
                <Button x:Name="BtnRegistar" Text="Registrar" Clicked="BtnRegistar_Clicked" BackgroundColor="Azure"></Button>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>
</ContentPage>